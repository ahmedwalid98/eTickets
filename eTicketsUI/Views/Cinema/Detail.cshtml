@model CinemaDto
@{
    ViewData["Title"] = "Cinema Detail";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" src="@Model.CinemaLogo" />
                </div>
                <div class="form-group mb-4">
                    <label asp-for="CinemaLogo" class="control-label"></label>
                    <input asp-for="CinemaLogo" class="form-control" readonly />
                    <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

