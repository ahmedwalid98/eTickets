@model IEnumerable<CinemaDto>
@{
    ViewData["Title"] = "Cinema List Page";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Profile Picture</th>
                    <th>Full Name</th>
                    <th>Bio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.CinemaLogo" alt="@actor.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(item => actor.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(item => actor.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@actor.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white js-delete" data-id="@actor.Id" data-url="/Cinema/Delete/"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_CreateItem", "Cinema")
@section Scripts
{
    <script src="~/js/delete-item.js" asp-append-version="true"></script>
}

